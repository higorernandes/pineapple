<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context="pineapplesoftware.pineappleapp.main.MainActivity">

    <ImageView
        android:id="@+id/imageHeaderBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <!-- User profile picture -->
        <ImageView
            android:id="@+id/imageProfile"
            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <!-- User name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:text="Higor Ernandes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_medium_large"
            android:layout_marginTop="@dimen/font_size_medium" />

        <!-- User website -->
        <TextView
            android:id="@+id/userWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryExtraLight"
            android:textSize="@dimen/font_size_small"
            android:fontFamily="@font/roboto_light" />

    </LinearLayout>

</RelativeLayout>