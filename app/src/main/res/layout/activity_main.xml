<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pineapplesoftware.pineappleapp.main.view.MainActivity"
    android:orientation="vertical">

    <!-- Main list of expenses -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainExpensesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center">

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/profile_picture"
            android:layout_width="@dimen/default_medium_image_size"
            android:layout_height="@dimen/default_medium_image_size"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>

    </RelativeLayout>

</LinearLayout>
